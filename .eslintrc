---
env:
    browser: false
    node: true
    es6: true
    nova/nova: true

plugins:
    - nova

parserOptions:
    ecmaVersion: latest
    sourceType: module

extends: eslint:recommended

rules:
    indent:
        - error
        - 4
        - SwitchCase: 1

    linebreak-style:
        - error
        - unix

    quotes:
        - error
        - double
        - avoidEscape: true

    semi:
        - error
        - always

    no-promise-executor-return: warn
    no-async-promise-executor: warn

    arrow-parens:
        - warn
        - as-needed
    array-element-newline:
        - warn
        - consistent
    comma-dangle:
        - warn
        - never
    computed-property-spacing:
        - error
        - never

    no-unused-vars: off
    array-bracket-spacing: off
