{
    "name": "Stylelint",
    "organization": "Neel Yadav",
    "identifier": "com.neelyadav.stylelint",
    "version": "1.0.1",
    "description": "Stylelint issue provider integration for the Nova code editor.",
    "license": "MIT",
    "categories": [
        "formatters",
        "issues"
    ],

    "homepage": "https://neelyadav.com/",
    "bugs": "https://github.com/nlydv/nova-stylelint/issues",
    "repository": "https://github.com/nlydv/nova-stylelint.git",

    "main": "main.dist.js",

    "activationEvents": [
        "onLanguage:css",
        "onLanguage:scss",
        "onLanguage:sass",
        "onLanguage:less",
        "onWorkspaceContains:.stylelintrc",
        "onWorkspaceContains:.stylelintrc.js",
        "onWorkspaceContains:.stylelintrc.json",
        "onWorkspaceContains:.stylelintrc.yaml",
        "onWorkspaceContains:.stylelintrc.yml",
        "onWorkspaceContains:stylelintrc.config.js",
        "onWorkspaceContains:stylelintrc.config.cjs"
    ],

    "config": "config.json",

    "entitlements": {
        "filesystem": "readonly",
        "process": true
    }
}
